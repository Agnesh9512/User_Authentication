<%= stylesheet_link_tag 'home.css' %>
<body class="m-2">
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_details">
    <%= form.label :name, style: "display: block", class: 'form_field' %>
    <%= form.text_field :name, class: 'w-100' %>
  </div>
<br>
  <div class="form_details">
    <%= form.label :price, style: "display: block", class: 'form_field' %>
    <%= form.number_field :price, class: 'w-100' %>
  </div>
<br>
  <div class="form_details">
    <%= form.submit "Update", class: 'btn btn-success btn-sm' %>
  </div>
<% end %>
</body>