<%= stylesheet_link_tag 'home.css' %>
<body class="m-2">
<div class="edit_card">
  <div class="card bg-light " style="width: 30rem;">
    <div class="m-2">
      <h1 class="card-header">Edit product</h1><br>
      <div class="card-body">
        <div id="form_details">
          <%= render "form", product: @product %>
        </div>
      </div>
      <br>
      <div id="show_back_card" class="card-footer">
        <%= link_to "Show this product", @product, class: 'btn btn-primary btn-sm' %> |
        <%= link_to "Back to products", products_path, class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
</div>
</body>