<p style="color: green"><%= notice %></p>
<%= stylesheet_link_tag 'home.css' %>
<body class="m-2">
<h1 id="product_title" class="bg-info">Manage Products</h1>
<br>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Payment</th>
    <th>Show Product Details</th>
    <th>Edit Product Details</th>
    <th>Delete Product</th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
<!--      <td><%#= product.content %></td>-->
      <td><%= button_to "Payment", checkout_create_path(product_id: product.id), remote: true, class: 'btn btn-success btn-sm' %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to "New product", new_product_path, class: 'btn btn-primary btn-sm', id: 'new_manage' %> |
<%= link_to "Home", welcome_index_path, class: 'btn btn-secondary btn-sm' %>
</body>

