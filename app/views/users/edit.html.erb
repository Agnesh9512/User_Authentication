<body class="m-2">
<div class="edit_card">
  <div class="card bg-light" style="width: 30rem;">
    <div class="card-body">
      <%= @user.email %>
      <%= form_with(model: @user) do |form| %>
        <%#= form.collection_check_boxes :role_ids, Role.all, :id, :name %>
        <%= form.collection_check_boxes :role_ids, Role.where(resource_type: nil), :id, :name %>
        <%= @user.errors[:roles] %>
        <%= form.button :submit %>
      <% end %>
    </div>
  </div>
</div>
</body>
